# ===================================
#  Form Field Definitions
# ===================================

fields:
  title:
    label: profixs.forms::lang.field.fields.title
    span: auto
    attributes:
      maxlength: 1000
  code:
    label: profixs.forms::lang.field.fields.code
    span: auto
    preset:
      field: title
      type: slug
    trigger:
      action: hide
      field: type
      condition: value[recaptcha]|value[label]
  type:
    label: profixs.forms::lang.field.fields.type
    type: balloon-selector
    span: auto
    options:
      text: profixs.forms::lang.field.fields.type_options.text
      textarea: profixs.forms::lang.field.fields.type_options.textarea
      select: profixs.forms::lang.field.fields.type_options.select
      selecttree: profixs.forms::lang.field.fields.type_options.selecttree
      checkbox: profixs.forms::lang.field.fields.type_options.checkbox
      multicheckbox: profixs.forms::lang.field.fields.type_options.multicheckbox
      radio: profixs.forms::lang.field.fields.type_options.radio
      recaptcha: profixs.forms::lang.field.fields.type_options.recaptcha
      label: profixs.forms::lang.field.fields.type_options.label
      file: profixs.forms::lang.field.fields.type_options.file
      phone: profixs.forms::lang.field.fields.type_options.phone
  field_rules:
    label: profixs.forms::lang.field.fields.rules
    span: auto
    type: checkboxlist
    options:
        required: profixs.forms::lang.field.fields.rules_options.required
        numeric: profixs.forms::lang.field.fields.rules_options.numeric
        email: profixs.forms::lang.field.fields.rules_options.email
        recaptcha: profixs.forms::lang.field.fields.rules_options.recaptcha
        image: profixs.forms::lang.field.fields.rules_options.image
        limit: profixs.forms::lang.field.fields.rules_options.limit
    dependsOn:
        - type
    trigger:
      action: hide
      field: type
      condition: value[recaptcha]|value[label]
  placeholder:
    label: profixs.forms::lang.field.fields.placeholder
    span: auto
    trigger:
      action: hide
      field: type
      condition: value[checkbox]|value[recaptcha]|value[radio]|value[label]|value[file]|value[multicheckbox]|value[phone]
  rules_options[limit][min]:
      label: profixs.forms::lang.field.fields.rules_options.min
      span: left
      dependsOn:
          - type
          - field_rules
      trigger:
          action: show
          field: field_rules[]
          condition: value[limit]
  rules_options[limit][max]:
      label: profixs.forms::lang.field.fields.rules_options.max
      span: left
      dependsOn:
          - type
          - field_rules
      trigger:
          action: show
          field: field_rules[]
          condition: value[limit]

  options:
    label: profixs.forms::lang.field.fields.options
    type: repeater
    prompt: profixs.forms::lang.field.fields.options_prompt
    trigger:
      action: show
      field: type
      condition: value[select]|value[radio]|value[multicheckbox]|value[selecttree]
    form:
      fields:
        title:
          label:  profixs.forms::lang.field.fields.options_form.title
          span: auto
        value:
          label:  profixs.forms::lang.field.fields.options_form.value
          span: auto
        options:
          type: repeater
          trigger:
            action: show
            field: ^type
            condition: value[selecttree]
          form:
            fields:
              title:
                label:  profixs.forms::lang.field.fields.options_form.title
                span: auto
              value:
                label:  profixs.forms::lang.field.fields.options_form.value
                span: auto
  file_extensions_list:
    label: profixs.forms::lang.field.fields.file_extensions
    span: right
    type: checkboxlist
    trigger:
      action: show
      field: type
      condition: value[file]

