# ===================================
# Filter Scope Definitions
# ===================================

scopes:
    form:
        label: profixs.forms::lang.inbox.filters.form
        modelClass: ProFixS\Forms\Models\Form
        conditions: form_id in (:filtered)
        nameFrom: name
    status:
        label: profixs.forms::lang.inbox.filters.status
        type: group
        modelClass: ProFixS\Forms\Models\Inbox
        conditions: status in (:filtered)
        options: getStatusOptions
